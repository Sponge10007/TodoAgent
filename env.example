# 生活管家AI Agent - 环境配置

# 数据库配置
# 数据库类型: sqlite, sqlserver
DB_TYPE=sqlite

# SQLite 配置（默认）
DATABASE_URL=sqlite:///./life_manager.db

# SQL Server 配置
# 取消注释以下配置来使用 SQL Server
# DB_TYPE=sqlserver
# DB_SERVER=localhost
# DB_PORT=1433
# DB_NAME=life_manager
# DB_USER=sa
# DB_PASSWORD=your_password
# DB_DRIVER=ODBC Driver 17 for SQL Server

# 或者直接使用完整的连接字符串
# DATABASE_URL=mssql+pyodbc://username:password@server:port/database?driver=ODBC+Driver+17+for+SQL+Server

# 生产环境可使用PostgreSQL或MySQL
# DATABASE_URL=postgresql://user:password@localhost/life_manager
# DATABASE_URL=mysql://user:password@localhost/life_manager

# AI API配置
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1

# 通义千问API配置（备选）
QWEN_API_KEY=sk-9f4d4c87093a4d7bbb4e4b1b3fd550bd
QWEN_BASE_URL=https://dashscope.aliyuncs.com/api/v1

# 应用配置
APP_NAME=生活管家AI Agent
APP_VERSION=2.0.0
DEBUG=true
SECRET_KEY=your_secret_key_here

# 服务器配置
HOST=0.0.0.0
PORT=8000

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# 文件上传配置
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_FOLDER=uploads/

# 通知配置（可选）
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password

# 云端部署配置（可选）
CLOUD_PROVIDER=local  # local, aws, azure, gcp
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0

# 调度器配置
SCHEDULER_ENABLED=true
CHECK_INTERVAL=60

# 安全配置
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 应用配置
APP_NAME=生活管家AI Agent
APP_VERSION=2.0.0
DEBUG=true
SECRET_KEY=your_secret_key_here

# 服务器配置
HOST=0.0.0.0
PORT=8000
WORKERS=1 